{
    "manifest_version": 3,
    "name": "FastSimpleProxy 简单快速的动态代理",
    "version": "1.0",
    "description": "使用 PAC 脚本根据黑白名单动态设置代理，支持通配符规则",
    "permissions": [
      "proxy",
      "storage",
      "tabs",
      "webRequest",
      "activeTab",
      "webNavigation"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    }
  }